    <% layout ('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <!-- showCamp.css is a stylesheet with a layout (grid and nested flexbox) for different screen sizes -->
    <link rel="stylesheet" href="/stylesheets/show.css">
    
    <div id="containerShowCamp">

            <div id="showCampAuthorTimeTitleLocation">
             
                <div id="showCampAuthorAndTime">
                  <span id="showCampAuthor">Submitted by <%= campground.author.username %></span>
                  <span id="showCampTime">2 days ago</span>
                </div>

                <h1 id="showCampTitle" class="card-title"><%= campground.title %></h1>
                
                <p id="showCampLocation"><%= campground.location %></p>
            </div> 
            <div id="showCamp_pictures">
                  <% if (campground.images.length>0) {%>
                      <div id="campgroundCarousel" class="carousel carousel-dark slide" data-bs-ride="carousel">
                    
                            <div id="imgContainerCarousel" class="carousel-inner">
                                <!-- Logic for displaying multiple images for a campground -->
                                <% campground.images.forEach((img, i) =>{ %>
                                  <!-- Only the first image has 'active' class -->
                                  
                                    <div id="imgContainer" class="carousel-item <%= i===0?'active':'' %>">
                                      <div id="showCampImgWrapper">
                                        <img id="campShowImg" src="<%= img.url %>" class="d-block" alt="">
                                      </div>
                                    </div>
                                <% }) %>
                            </div>

                            <% if(campground.images.length > 1){ %>
                                  <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                  </button>
                                  <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                  </button>
                            <% } %>
                    </div>
                  <% } else { %>
                            
                          <div id="no_img_available_wrapper">
                            <!-- Display this img if a campground does not have any images -->
                              <img id="no_img_available" src="https://res.cloudinary.com/dljmlxtmx/image/upload/v1760748840/No_Image_Available_exlv6b.png" alt="" class="img-fluid">
                          </div>
                  <% } %>
            </div>

            <div id="showCampMapWrapper">
                <div id="showMapBtn">Show on map</div>

                <div id="showHideMap" class="hidden">
                    <div id="map"></div>
                </div>
            </div>
            
            
            <div id="showCampDescriptionWrapper">
                <span id="showCampDescription" class="showCampDescrShort"><%= campground.description %>
                </span>
                <span class="readMore">Read More</span>
            </div>
            
            <div id="showCampPriceWrapper">

                <div id="showPriceBtn">Show price</div>

                <div id="showHideCampPriceTaxes" class="hidden">
                Price for 1 night<br>
                  <span id="campgroundPrice">
                    CAD<%= campground.price %>
                  </span><br>
                  <span id="campgroundTax">
                    + CAD<%= Math.ceil(campground.price*0.18) %> taxes and fees
                  </span>
                </div>
            </div>
            
 
            <div id="showCampUpdateDeleteBtnsWrapper">

              <% if (currentUser && campground.author.equals(currentUser._id)){ %>
                  <div id="showCampUpdateDeleteBtn">
                      <a id="showCampEditBtn" href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit Campground</a>

                      <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button id="showCampDeleteBtn" class="btn btn-danger">Delete</button>
                      </form>
                  </div>

              <% } %>

            </div>

            
                
        <div id="campReview">

          <% if (currentUser) { %>
            <div id="reviewForm">
              <h2>Leave a Review</h2>
              <form class="validated-form" novalidate action="/campgrounds/<%= campground._id %>/reviews" method="POST">

                <div class="mb-3">
                  <fieldset class="starability-basic">
                    <legend>Rating:</legend>
                    <input checked="checked" type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                
                <div class="mb-3">
                  <label for="body" class="form-label">Review Text</label>
                  <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please provide campground review.
                  </div>
                </div>

                <button class="btn btn-success">Add A Review</button>

              </form>
            </div>
          <% } %>

            <div id="allCampReviews">
              <h2><%= campground.title %><br> Reviews</h2>
              <% if(campground.reviews.length===0) { %>
                <p>Sorry, no reviews... ðŸ¤”</p>
              <% } %> 
            <% for (let review of campground.reviews) { %>

                  <div class="card mb-3">

                        <div class="card-body">

                            <h5 class="card-title">
                              <%= review.author.username %>
                            </h5>
                            
                            <p class="starability-result" 
                            data-rating="<%= review.rating %>">
                                  Rated: <%= review.rating %>
                            </p>
                            
                            <p class="card-text"><%= review.body %></p>

                            <!-- Display this form (Delete review button) only for a user who is an author of a review -->
                             <% if(currentUser && review.author.equals(currentUser._id)){ %>
                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                              <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                      
                        </div>
                  </div>

            <% } %>
          </div>

        </div>

    </div>
    <script>
      const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
      const campground = <%- JSON.stringify(campground) %>;
    </script>

    <script src="/javascripts/showPageMap.js"></script>
    <script src="/javascripts/show.js "></script>

    

    

    


