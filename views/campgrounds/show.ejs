    <% layout ('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    
    <div class="row">
        <div class="col-6">

            <div class="card mb-3">
              <!-- Logic for displaying multiple images for a campground -->
              <% for (let img of campground.images){ %>

                <img src="<%= img.url %>" class="card-img-top" alt="The image of the campground">

              <% } %>

                <div class="card-body">
                  <h5 class="card-title"><%= campground.title %></h5>
                  <p class="card-text"><%= campground.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%= campground.location %></li>
                  <li class="list-group-item">
                    Submitted by: <%= campground.author.username %>
                  </li>
                  <li class="list-group-item"><strong>$<%= campground.price %>/night</strong></li>
                </ul>
                <div class="card-body">

                  <% if (currentUser && campground.author.equals(currentUser._id)){ %>

                  <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit Campground</a>
                  <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                  </form>

                  <% } %>

                  <a href="/campgrounds" class="card-link btn btn-primary">All Campgrounds</a>
                </div>
                <div class="card-footer text-muted">
                  2 days ago
                </div>
            </div>

            
        </div>

        <div class="col-6">
          
          <% if (currentUser) { %>
            <h2>Leave a Review</h2>
            <form class="mb-3 validated-form" novalidate action="/campgrounds/<%= campground._id %>/reviews" method="POST">

              <div class="mb-3">
                <fieldset class="starability-basic">
                  <legend>Rating:</legend>
                  <input checked="checked" type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              
              <div class="mb-3">
                <label for="body" class="form-label">Review Text</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please provide campground review.
                </div>
              </div>

              <button class="btn btn-success">Add A Review</button>

            </form>
          <% } %>


            <% for (let review of campground.reviews) { %>

                  <div class="card mb-3">

                        <div class="card-body">

                            <h5 class="card-title">
                              <%= review.author.username %>
                            </h5>
                            
                            <p class="starability-result" 
                            data-rating="<%= review.rating %>">
                                  Rated: <%= review.rating %>
                            </p>
                            
                            <p class="card-text">Review: <%= review.body %></p>

                            <!-- Display this form (Delete review button) only for a user who is an author of a review -->
                             <% if(currentUser && review.author.equals(currentUser._id)){ %>
                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                              <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                      
                        </div>
                  </div>

            <% } %>

        </div>
    </div>

    

    

    


