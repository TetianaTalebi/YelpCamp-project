    <% layout ('layouts/boilerplate') %>
    
    <h1>Edit Campground</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title: </label>
            <input type="text" id="title" name="campground[title]"
                value="<%= campground.title %>">
        </div>
        <div>
            <label for="location">Location: </label>
            <input type="text" id="location" name="campground[location]"
                value="<%= campground.location %>">
        </div>
        <div>
            <label for="price">Price, USD/day: </label>
            <input type="number" min="0" step="0.01" id="price" name="campground[price]">
        </div>
        <div>
            <label for="description">Description: </label>
            <input type="text" id="description" name="campground[description]">
        </div>
        
        <button>Update Campground</button>
        
    </form>

    <p>
        <a href="/campgrounds/<%= campground.id %>">
            Cancel Editing and Return Back to Campground View
        </a>
    </p>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" placeholder="Campground title">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" class="form-control" id="image" name="campground[image]">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="number" id="price" step="1" min="0" name="campground[price]" class="form-control" placeholder="0" aria-label="price" aria-describedby="price-label">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="campground[description]" id="description" class="form-control"
                    rows="3">
                    </textarea>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" placeholder="Campground location">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add campground</button>
                </div>
                
            </form>
            
            <div>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    </div>
    
